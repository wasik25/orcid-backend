{% extends 'layout.html' %}

{% block stylesheet %}
<style>
    .container {
        max-width: 90%;
        margin: auto;
    }

    .table {
        margin-top: 20px;
    }

    h2 {
        margin-bottom: 20px;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }
    .footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        text-align: center;
        padding: 10px 0;
        background-color: #f8f9fa;
    }
</style>
{% endblock %}


{% block content %}
<h2 class="text-center">Attendance Records</h2>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Employee</th>
                <th>Date</th>
                <th>Check-in</th>
                <th>Check-out</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for attendance in attendances %}
            <tr>
                <td>{{ attendance.employee.get_full_name }}</td>
                <td>{{ attendance.date }}</td>
                <td>{{ attendance.check_in|default:"Not Checked In" }}</td>
                <td>{{ attendance.check_out|default:"Not Checked Out" }}</td>
                <td>
                    <a href="{% url 'attendance_update' attendance.id %}" class="btn btn-sm btn-primary">Edit</a>
                </td>
            </tr>
